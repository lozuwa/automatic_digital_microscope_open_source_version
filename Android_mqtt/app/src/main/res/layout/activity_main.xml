<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/root">

    <TextView android:text="@string/company" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/company"
        android:layout_centerHorizontal="true"/>

    <TextView android:text="@string/ideator" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ideator"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/company"/>

    <TextView android:text="@string/developer" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/developer"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ideator"/>

    <ImageView
        android:id="@+id/door_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ideator"
        android:src="@drawable/closed_door"
        android:adjustViewBounds="true"/>
</RelativeLayout>
